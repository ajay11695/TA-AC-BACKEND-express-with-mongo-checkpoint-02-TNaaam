<%- include('partials/header') -%>

<body class="bg-2">
 <header class="head-bg">
    <div class="flex">
        <a class="btn f-weight bg-blue" href="/">HOME</a>
        <a class="btn f-weight bg-blue" href="/events/<%= event._id %>">Back</a>
        <a class="btn f-weight bg-blue" href="/events">All Event</a>
    </div>
 </header>
 
   <div class="container-1">
    <form action="/events/<%= event._id %>" method="POST" class="form-event padding-20">
        <h1 class="font-30 f-weight text-align margin-b-10">Edit Event</h1>
        <input class="form-input margin-b-10" type="text" name="title" placeholder="Enter title" value="<%= event.title %>">
        <textarea class="margin-b-10" name="summary" id="" cols="" rows="4" placeholder="write summary.."><%= event.summary %></textarea>
        <input class="form-input margin-b-10" type="text" name="host" placeholder="Enter hostname" value="<%= event.host %>">
       <div class="flex margin-b-10">
        <input class="form-date" type="date" name="start_date" placeholder="Enter" value="<%= format(event.start_date,'yyyy-MM-dd') %>">
        <h1 class="font-20">To</h1>
        <input class="form-date" type="date" name="end_date" placeholder="Enter" value="<%= format(event.end_date,'yyyy-MM-dd') %>">
       </div >
        <input class="form-input margin-b-10" type="text" name="category" placeholder="Enter category" value="<%= event.category %>">
        <input class="form-input margin-b-10" type="text" name="location" placeholder="Enter location" value="<%= event.location %>">
        <div class="text-align ">
            <input class="btn btn-2 f-weight" type="submit" value="EDIT EVENT">
        </div>
    </form>
   </div>

</body>

<%- include('partials/footer') -%>