<%- include('partials/header') -%>

<body class="bg-2">
 <header class="head-bg">
    <div class="flex">
        <a class="btn f-weight bg-blue" href="/">HOME</a>
        <a class="btn f-weight bg-blue" href="/events/<%= remark.eventId %>">Back</a>
        <a class="btn f-weight bg-blue" href="/events">All Event</a>
    </div>
 </header>
 
   <div class="container-1">
    <form action="/remarks/<%= remark._id %>" method="POST" class="form-event padding-20">
        <h1 class="font-30 f-weight text-align margin-b-10">Update Remark</h1>
        <input class="form-input margin-b-10" type="text" name="title" placeholder="Enter title" value="<%= remark.title %>">
        <input class="form-input margin-b-10" type="text" name="author" placeholder="Enter hostname" value="<%= remark.author %>">

        <div class="text-align ">
            <input class="btn btn-2 f-weight" type="submit" value="Update Remark">
        </div>
    </form>
   </div>

</body>

<%- include('partials/footer') -%>